{% extends 'IntranetBundle::mainLayout.html.twig' %}

    {% block content %}
	{% form_theme edit_form 'IntranetBundle:Form:cp_form_theme.html.twig' %}
        <div class="row-fluid">
            <div class="block span6">
                <div class="block-heading" data-toggle="collapse"
                     data-target="#tablewidget">{{ entity.level|customerLevel|trans }} {% trans %}edit{% endtrans %}
                </div>
                <div id="widget1container" class="block-body collapse in">
                    {{ form(edit_form ) }}

                    <ul class="record_actions unstyled">
                        <li>
                            <a onclick="return confirmation()" class="btn btn-table-actions" href="{{ path('customer_level',{'level':entity.Level}) }}">
                               {% trans %} Back to the list{% endtrans %}
                            </a>
                            <a onclick="return confirmation()" class="btn btn-table-actions"  href="{{ path('customer_show', { 'id': entity.id }) }}"> {% trans %}show{% endtrans %}</a>

                        </li>
                    </ul>
                </div>
            </div>
            {% import "IntranetBundle:Macroses:uploadFileMacro.html.twig" as upload %}
            {% if uploadDeleteForms is defined %}
                {{ upload.template(entity,'campaign',uploadDeleteForms,upload_file_form) }}
            {% endif %}
        </div>

    {% endblock %}


