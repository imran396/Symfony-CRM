
{% if entity.customers|length %}

    {% set entities = entity.customers %}

    <div class="row-fluid">
        <div class="block">
            <div class="block-heading" data-toggle="collapse" data-target="#widget1container">{% trans %}Customer{% endtrans %}</div>
            <div id="widget1container" class="block-body collapse in">
                <div id="tablewidget" class="block-body collapse in">
                    {% embed "IntranetBundle:Customer:indexTable.html.twig" %}
                        {% block actionsRows %}
                            <td>
                                <a class="btn btn-table-actions"
                                   href="{{ path('customer_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
                            </td>
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
        </div>
    </div>

{% endif %}
