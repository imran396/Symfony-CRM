<table id="indexTable" class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>For customers</th>
                <th>For employees</th>
                <th>For others</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.forCustomers|bool|trans }}</td>
                <td>{{ entity.forEmployees|bool|trans  }}</td>
                <td>{{ entity.forOthers|bool|trans  }}</td>
                <td>

                 <div class="inline-forms">
                        <a  class="btn btn-table-actions"  href="{{ path('accesslevel_show', { 'id': entity.id }) }}"> {% trans %}show{% endtrans %}</a>
                        <a  class="btn btn-table-actions"  href="{{ path('accesslevel_edit', { 'id': entity.id }) }}"> {% trans %}edit{% endtrans %}</a>
                </div>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
