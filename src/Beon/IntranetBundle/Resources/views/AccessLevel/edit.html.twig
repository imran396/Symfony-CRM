
{% extends 'IntranetBundle::mainLayout.html.twig' %}

{% block content %}
<div class="row-fluid">
        <div class="block span12">
            <div class="block-heading" data-toggle="collapse" data-target="#tablewidget">{% trans %}Access level edit{% endtrans %}</div>
            <div id="widget1container" class="block-body collapse in">
                {{ form_start(edit_form, {'attr':{'class':'form-horizontal' }} ) }}
                {{ form_row(edit_form.name) }}
                {{ form_row(edit_form.forCustomers) }}
                {{ form_row(edit_form.forOthers) }}
                {{ form_row(edit_form.forEmployees) }}

                {% for permission in edit_form.permissions %}
                 <div class="floatLeft">
                     {% set labels = permission.vars.label|split('|') %}
                     {{ form_widget(permission) }}
                     {{ form_label(permission,labels.0,{ 'label_attr': {'title':  labels.1}}) }}
                </div>
                {% endfor %}

                <div style="clear:both;"></div>
                {{ form_end(edit_form) }}

                <ul class="record_actions unstyled">
                    <li>
                        <a  onclick="return confirmation()" class="btn btn-table-actions" href="{{ path('accesslevel') }}">
                            {% trans %}Back to the list{% endtrans %}
                        </a>
                         <a onclick="return confirmation()" class="btn btn-table-actions"  href="{{ path('accesslevel_show', { 'id': entity.id }) }}"> {% trans %}show{% endtrans %}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}