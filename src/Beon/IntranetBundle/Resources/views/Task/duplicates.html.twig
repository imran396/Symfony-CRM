
{% if duplicateTask|length%}
 {% set entities = duplicateTask %}
    <div class="row-fluid" id="duplicates">
        <div class="block">
            <div class="block-heading" data-toggle="collapse" data-target="#widget1container">{% trans %}Duplicates{% endtrans %}</div>
            <div id="widget1container" class="block-body collapse in">
                <div id="tablewidget" class="block-body collapse in">
                    {% embed "IntranetBundle:Task:indexTable.html.twig" %}
                        {% block actionsRows %}
                            <td>
                                <a class="btn btn-table-actions" href="{{ path('task_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
                                {% if is_granted('ROLE_TASKS_EDIT') %}
                                    <a class="btn btn-table-actions" href="{{ path('task_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
                                {% endif %}
                            </td>
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
        </div>
    </div>

{% endif %}
