                                {{ form_errors(form.priceRegular) }}
                                {{ form_widget(form.priceRegular) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.offerType) }}
                            <div class="col-lg-5">
                                 {{ form_errors(form.offerType) }}
                                 {{ form_widget(form.offerType) }}
                            </div>
                        </div>

                         <div class="form-group">
                            {{ form_label(form.numberOfSeconds) }}
                             <div class="col-lg-5">
                                 {{ form_errors(form.numberOfSeconds) }}
                                 {{ form_widget(form.numberOfSeconds) }}
