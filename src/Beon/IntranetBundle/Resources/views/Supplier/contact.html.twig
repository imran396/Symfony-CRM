                         <div class="form-group">
                            {{ form_label(form.numberOfAds) }}
                              <div class="col-lg-5">
                                 {{ form_errors(form.numberOfAds) }}
                                 {{ form_widget(form.numberOfAds) }}
                            </div>
                        </div>
                       <div class="form-group">
                            {{ form_label(form.visitors) }}
                            <div class="col-lg-5">
                                 {{ form_errors(form.visitors) }}
                                 {{ form_widget(form.visitors) }}
                             </div>
                       </div>
                       <div class="form-group">
                            {{ form_label(form.readers) }}
                            <div class="col-lg-5">
                                 {{ form_errors(form.readers) }}
                                 {{ form_widget(form.readers) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.viewers) }}
                            <div class="col-lg-5">
                                {{ form_errors(form.viewers) }}
                                {{ form_widget(form.viewers) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.listeners) }}
                           <div class="col-lg-5">
                            {{ form_errors(form.listeners) }}
                            {{ form_widget(form.listeners) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.audienceSize) }}
                               <div class="col-lg-5">
                                 {{ form_errors(form.audienceSize) }}
                                 {{ form_widget(form.audienceSize) }}
                               </div>
                        </div>

                        <div id="supplier_pagesize" class="form-group">
                            <label class="control-label col-lg-3 required" for="supplier_pagesize" style="display: block; ">{% trans %}Size of ads{% endtrans %}</label>
                            <div class="col-lg-5">
                                <div class="pagesize_width">
                                    {{ form_errors(form.adsizeWidth) }}
                                    {{ form_widget(form.adsizeWidth) }}
                                </div>
                                <div class="floatLeft cross_icon_big"><span class="icon-remove"></span></div>
                                <div class="pagesize_height">
                                    {{ form_errors(form.adsizeHeight) }}
                                    {{ form_widget(form.adsizeHeight) }}
                                </div>
                                <div class="floatLeft mm">mm</div>
                            </div>
                            <div style="clear:both;"></div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.includedServices) }}
                            <div class="col-lg-5">
                                 {{ form_errors(form.includedServices) }}
                                 {{ form_widget(form.includedServices) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.includedServicesOther) }}
                            <div class="col-lg-5">
                                 {{ form_errors(form.includedServicesOther) }}
                                 {{ form_widget(form.includedServicesOther) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.files) }}
                            <div class="col-lg-5">
                                 {{ form_errors(form.files) }}
                                 {{ form_widget(form.files) }}
                            </div>
                        </div>
                        {#
                        <div class="form-group">
                             {{ form_errors(form) }}
                            <label class="control-label col-lg-3  required">{% trans %}File{% endtrans %}-1</label>
                             <div class="col-lg-5">
                                   <div><input style="float: left" type="file" id="form_files_0"  name="form[files][0]" class="file-box"></div>
                             </div>
                         </div>
                              <div id="file-fields-list" data-prototype="{{ form_widget(form.files.vars.prototype)|e }}"> </div>

                          <div class="form-group">
                              <label class="control-label col-lg-3  required"></label>
                             <div class="col-lg-5">
                                   <button class="btn btn-table-actions" type="button" id="add-another-file"><i class="icon-plus"></i> {% trans %}Add another file{% endtrans %}</button>
                             </div>
                          </div>
                          #}
                          
                          <div class="mt20" >
                              {{ form_row (form._token) }}
                               <div class="form-group">
                            <div class="col-lg-9 col-lg-offset-3">
                                {{ form_widget(form.submit) }}
                            </div>
                        </div>

                      </div>
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>

    {% block javascripts %}
        {% include 'IntranetBundle:Supplier:contactScript.html.twig' %}
    {% endblock javascripts %}
{% endblock %}



