{% extends 'IntranetBundle::mainLayout.html.twig' %}

{% block content %}
{% form_theme form 'IntranetBundle:Form:cp_form_theme.html.twig' %}
    <div class="row-fluid">
        <div class="block">
            <div class="block-heading" data-toggle="collapse" data-target="#tablewidget">{% trans %}Supplier creation{% endtrans %}</div>

            <div id="widget1container" class="block-body collapse in">
	    {{ form_start(form, {'attr':{'class':'' }} ) }}
		    {{ form_errors(form) }}
		    {{ form_row(form.name) }}
		      
               <div id="supplier_pagesize" class="clear">
                    <label for="supplier_pagesize" style="display: block; ">{% trans %}Pagesize{% endtrans %}</label>
                    <div class="pagesize_width">
                        {{ form_errors(form.pagesizeWidth) }}
                        {{ form_widget(form.pagesizeWidth) }}
                    </div>
                    <div class="floatLeft cross_icon"><span class="icon-remove"></span></div>
                    <div class="pagesize_height">
                        {{ form_errors(form.pagesizeHeight) }}
                        {{ form_widget(form.pagesizeHeight) }}
                    </div>
                    <div class="floatLeft mm">mm</div>
                    <div style="clear:both;"></div>
                </div>

                {{ form_end(form) }}


                <ul class="record_actions unstyled">
                    <li>
                        <a href="{{ path('supplier') }}">
                            {% trans %}Back to the list{% endtrans %}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

 {#   {% include 'IntranetBundle:Supplier:supplierScript.html.twig' %}#}


{% endblock %}
