
{% if (entity.pressreleases is defined and entity.pressreleases|length) or (pressreleases is defined and pressreleases|length) %}
    {% if entity.pressreleases %}
      {% set entities = entity.pressreleases %}
    {% else %}
      {% set entities = pressreleases %}
    {% endif %}

    <div class="row-fluid">
        <div class="block">
            <div class="block-heading" data-toggle="collapse" data-target="#widget1container">{% trans %}Pressrelease{% endtrans %}</div>
            <div id="widget1container" class="block-body collapse in">
                <div id="tablewidget" class="block-body collapse in">
                    {% embed "IntranetBundle:Pressrelease:indexTable.html.twig" %}
                        {% block actionsRows %}
                            <td>
                                <a class="btn btn-table-actions"
                                   href="{{ path('pressrelease_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
                            </td>
                        {% endblock %}
                    {% endembed %}
                </div>
            </div>
        </div>
    </div>

{% endif %}
