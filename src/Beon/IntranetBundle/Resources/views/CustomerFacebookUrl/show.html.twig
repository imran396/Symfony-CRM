
{% extends 'IntranetBundle::mainLayout.html.twig' %}

{% block content %}

    <div class="row-fluid">

        <div class="block span6">
            <div class="block-heading" data-toggle="collapse" data-target="#widget1container">{% trans %}Stakeholder{% endtrans %} => {% trans %}Facebook Url{% endtrans %}</div>
            <div id="widget1container" class="block-body collapse in">


                <div id="tablewidget" class="block-body collapse in">
                    <table class="table table-bordered">
                        <tbody>
            <tr>
                <th>{% trans %}Stakeholder{% endtrans %}</th>
                <td><a href="{{ path('customer_show', { 'id': entity.customer.id }) }}">{{ entity.customer }}</a></td>
            </tr>
             <tr>
                <th>{% trans %}Facebook Url{% endtrans %}</th>
                <td><a target="_blank" href="{{ entity.facebookurl.url }}">{{ entity.facebookurl.url|truncate(50) }}</a></td>
            </tr>
            <tr>
                <th>{% trans %}Isown{% endtrans %}</th>
                <td>{{ entity.isOwn|bool }}</td>
            </tr>
        </tbody>
                    </table>
                </div>

                {% if is_granted('ROLE_STAKEHOLDERS_ALL') %}
                    <div class="inline-forms">
                        <a class="btn btn-table-actions" href="{{ path('customerfacebookurl_edit', { 'id': entity.id }) }}">
                           {% trans %} Edit{% endtrans %}
                        </a>
                        {{ form(delete_form) }}
                    </div>
                {% endif %}

                <div>
                    <a href="{{ path('customerfacebookurl') }}">
                        {% trans %}Back to the list{% endtrans %}
                    </a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
