<table id="indexTable" class="table">
    <thead>
    <tr>
        <th>{% trans %}Name{% endtrans %}</th>
        <th>{% trans %}Email{% endtrans %}</th>
        <th>{% trans %}Actions{% endtrans %}</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.email }}</td>
            <td>
                <a class="btn btn-table-actions" href="{{ path('user_show', { 'id': entity.id }) }}">{% trans %}show{% endtrans %}</a>
                <a class="btn btn-table-actions" href="{{ path('user_edit', { 'id': entity.id }) }}">{% trans %}edit{% endtrans %}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>